@model TaskMasterSovellus.Models.Tasks
<!-- The Modal -->
<div class="modal fade" id="ModalTaskEdit">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">

            <div class="modal-header">
                <h3>Are you sure you want to delete this task?</h3>
            </div>

            <div class="modal-body">






                <div class="row">

               
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.TaskName)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.TaskName)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.TaskDescription)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.TaskDescription)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.TaskPoints)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.TaskPoints)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.TaskPriority)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.TaskPriority)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Sprints.SprintName)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Sprints.SprintName)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.TaskState.StateName)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.TaskState.StateName)
                        </dd>

                    </dl>
                </div>


            </div>

            <div class="modal-footer">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <button type="submit" value="Delete" id=@Model.TaskId class="btn btn-danger">Delete</button>
                    |
                    <a href="@Url.Action("SprintTasksList","SprintTaskList",new {id=Model.SprintId })" class="btn btn-primary">Cancel</a>

                   
                </div>
                }
            </div>

        </div>
    </div>
</div>

